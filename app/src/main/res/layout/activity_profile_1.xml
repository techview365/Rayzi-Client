<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.chiky.activity.ProfileActivity.ProfileViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chat_bg_1"
        tools:context=".user.ProfileFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/mainRel"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/imgUser1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />

                    </RelativeLayout>

                    <com.example.chiky.utils.UserProfileImageView
                        android:id="@+id/imgUser"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="140dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/folowingbox"
                            android:layout_width="@dimen/_140sdp"
                            android:layout_height="0dp"
                            android:layout_marginVertical="220dp"
                            android:layout_weight="1.5"
                            android:background="@drawable/top_bottom_radius"
                            android:backgroundTint="#231C2C"
                            android:orientation="horizontal"
                            android:paddingVertical="12dp">

                            <LinearLayout
                                android:id="@+id/lytFollowing"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvFollowing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/abold"
                                    android:text="@string/_0"
                                    android:textColor="@color/white"
                                    android:textSize="24sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/alight"
                                    android:text="@string/following"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <View
                                android:layout_width=".3dp"
                                android:layout_height="match_parent"
                                android:background="#1AFFFFFF" />

                            <LinearLayout
                                android:id="@+id/lytFollowrs"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvFollowrs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/abold"
                                    android:text="@string/_0"
                                    android:textColor="@color/white"
                                    android:textSize="24sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/alight"
                                    android:text="@string/fans"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lysec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mainRel"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="45dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="30dp"
                                android:layout_weight="1.5"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvName"
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/abold"
                                    android:singleLine="true"
                                    android:textColor="@color/white"
                                    android:textSize="22sp" />

                                <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/alight"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="@color/text_gray"
                                    android:textSize="18sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvUserId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/alight"
                                        android:gravity="center"
                                        android:text=""
                                        android:textColor="@color/text_gray"
                                        android:textSize="18sp" />

                                    <ImageView
                                        android:id="@+id/copy"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5dp"
                                        android:layout_marginRight="5dp"
                                        android:src="@drawable/ion_copy"
                                        app:tint="@color/graylight" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvLevel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/bg_5dp_radius"
                                        android:backgroundTint="@color/pink"
                                        android:paddingHorizontal="7dp"
                                        android:paddingVertical="1dp"
                                        android:text="@string/level_1"
                                        android:textColor="@color/white" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:background="@drawable/bg_5dp_radius"
                                        android:backgroundTint="@color/purple"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imgGender"
                                            android:layout_width="17dp"
                                            android:layout_height="17dp"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="3dp"
                                            android:padding="2dp"
                                            android:src="@drawable/female"
                                            app:tint="@color/white" />

                                        <TextView
                                            android:id="@+id/tvAge"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingHorizontal="7dp"
                                            android:paddingVertical="1dp"
                                            android:text="@string/_0"
                                            android:textColor="@color/white" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lyedit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="20dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/btnEditProfile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/stroke_bg_20dp"
                                android:backgroundTint="#231C2C"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/alight"
                                    android:src="@drawable/edit_profile_icon_only" />

                                <View
                                    android:layout_width=".1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:background="@color/text_gray" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_7sdp"
                                    android:fontFamily="@font/abold"
                                    android:text="@string/edit_profile"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnSetting"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:background="@drawable/stroke_bg_20dp"
                                android:backgroundTint="#231C2C"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/alight"
                                    android:src="@drawable/setting_icon_only" />

                                <View
                                    android:layout_width=".1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:background="@color/text_gray" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_7sdp"
                                    android:fontFamily="@font/abold"
                                    android:text="@string/settings"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="20dp"
                            android:background="@color/lightblack1" />

                    </LinearLayout>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="@{viewModel.isLoading?View.VISIBLE : View.GONE}"
                        app:shimmer_base_color="@color/shimmarColor"
                        app:shimmer_colored="false"
                        app:shimmer_highlight_color="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <include layout="@layout/shimmer_profile" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lysec"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="@{viewModel.isLoading?View.GONE : View.VISIBLE}"
                                    tools:visibility="visible">

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="20dp"
                                android:layout_marginBottom="20dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/lytWallet"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:background="@drawable/stroke_bg_15dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="6dp">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:background="@drawable/avk_bg_round_pink"
                                        android:backgroundTint="#F44336"
                                        android:padding="@dimen/_8sdp"
                                        android:src="@drawable/wallet"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/tvWallet"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/amidum"
                                        android:text="@string/my_wallet"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/imgWallet"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_next"
                                        app:tint="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lytRecord"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:background="@drawable/stroke_bg_15dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="6dp">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:background="@drawable/avk_bg_round_pink"
                                        android:backgroundTint="#009688"
                                        android:padding="@dimen/_8sdp"
                                        android:src="@drawable/record"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/tvRecord"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/amidum"
                                        android:text="@string/coin_history"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/imgRecord"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_next"
                                        app:tint="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lytMyPost"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:background="@drawable/stroke_bg_15dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="6dp">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:background="@drawable/avk_bg_round_pink"
                                        android:backgroundTint="#E41384"
                                        android:padding="@dimen/_8sdp"
                                        android:src="@drawable/ic_my_post"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/tvMyPost"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/amidum"
                                        android:text="@string/my_posts"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/imgMyPost"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_next"
                                        app:tint="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lytMyVideos"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:background="@drawable/stroke_bg_15dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="6dp">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:background="@drawable/avk_bg_round_pink"
                                        android:backgroundTint="#9C27B0"
                                        android:padding="@dimen/_8sdp"
                                        android:src="@drawable/ic_relites"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/tvMyRelite"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/amidum"
                                        android:text="@string/my_relites"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/imgMyRelites"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_next"
                                        app:tint="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lytFreeDimonds"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:background="@drawable/stroke_bg_15dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="6dp"
                                    android:visibility="visible">

                                    <ImageView
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:background="@drawable/avk_bg_round_pink"
                                        android:backgroundTint="#FF9800"
                                        android:padding="@dimen/_8sdp"
                                        android:src="@drawable/diamond"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/tvFreeDiamond"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/amidum"
                                        android:text="@string/free_diamonds"
                                        android:textColor="@color/white"
                                        android:textSize="14dp" />

                                    <ImageView
                                        android:id="@+id/imgFreeDiamond"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_next"
                                        app:tint="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lytVIP"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:background="@drawable/stroke_bg_15dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="6dp">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:background="@drawable/avk_bg_round_pink"
                                        android:backgroundTint="#009688"
                                        android:padding="@dimen/_8sdp"
                                        android:src="@drawable/crown"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/tvBecomeVip"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/amidum"
                                        android:text="@string/become_vip"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/imgBecomeVip"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_next"
                                        app:tint="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lytSupport"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:background="@drawable/stroke_bg_15dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="6dp">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:background="@drawable/avk_bg_round_pink"
                                        android:backgroundTint="#F44336"
                                        android:padding="@dimen/_8sdp"
                                        android:src="@drawable/support"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/tvHaveIssue"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/amidum"
                                        android:text="@string/have_an_issue"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/imgHaveIssue"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_next"
                                        app:tint="@color/white" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lytComplains"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="6dp"
                                    android:background="@drawable/stroke_bg_15dp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="6dp">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:background="@drawable/avk_bg_round_pink"
                                        android:backgroundTint="#FF9800"
                                        android:padding="@dimen/_8sdp"
                                        android:src="@drawable/customer_satisfaction"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:id="@+id/tvMyComplain"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/amidum"
                                        android:text="@string/my_complains"
                                        android:textColor="@color/white"
                                        android:textSize="14sp" />

                                    <ImageView
                                        android:id="@+id/imgMyComplain"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/ic_next"
                                        app:tint="@color/white" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>